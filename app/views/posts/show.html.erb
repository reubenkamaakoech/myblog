<p>
  <strong><i><h4><%= @post.title %></h4></i></strong>
  </p>

  <p>
    <%= @post.content %>
  </p>
   
   <p>
      <strong>Comments</strong>
   </p>

  <p>
    <%= render @post.comments.includes(:user).order(id: :desc) %>
  </p>
  
  
  <p>
    <% @post.comments.each do |comment| %>
    <% comment.content, placeholder="Leave Your Comment" %>
    <% end %>

    <%= render "comments/form", comment: @comment %>
  </p>


<div>
  <%= link_to "Edit", edit_post_path(@post), class:"btn btn-outline-warning btn-sm" %> |
  <%= link_to "Back", posts_path, class:"btn btn-outline-primary btn-sm" %><br/><br/> 
  <%= link_to "Delete", @post, data: { turbo_method: "delete", turbo_confirm: "Are you sure?"}, class:"btn btn-danger btn-sm" %>
</div>



